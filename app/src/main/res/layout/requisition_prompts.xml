<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayoutOfPromptMessage"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/card_style">
    <ImageView
        android:id="@+id/imageViewClose"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="right"
        android:src="@drawable/close"
        android:tint="@android:color/holo_red_light"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Requisition Details"
        android:textSize="@dimen/textSize17sp"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|left"
        android:layout_marginTop="4dp"
        android:background="@drawable/small_card_style3"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="11dp">

        <TextView
            android:id="@+id/textView_inventory_name"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:background="@color/white2"
            android:text="Depot Name"
            android:gravity="center|start"
            android:paddingStart="10sp"
            android:paddingEnd="0sp"
            android:textSize="@dimen/textSize12sp"/>

       <!--
        <Spinner
            android:id="@+id/spinnerInventoryList"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:backgroundTint="@color/colorPrimary"
            android:fitsSystemWindows="true"
            android:gravity="center"
            android:paddingBottom="0dp"
            android:paddingLeft="0dp"
            android:scrollbarSize="4dp"
            android:spinnerMode="dropdown"
            />
        -->

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:scrollbarSize="1.5dp"
        android:layout_marginTop="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/button_shape"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:paddingBottom="10dp"
            android:layout_marginBottom="30dp">
            <!--list -->
            <HorizontalScrollView
                android:id="@+id/horizontalView"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:layout_width="match_parent"
                android:layout_marginTop="5dip"
                android:layout_marginBottom="23dp"
                android:layout_below="@+id/textViewOrderlistTitle"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/box_style"
                >

                <LinearLayout
                    android:id="@+id/layoutList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="0dp"
                    android:gravity="center"
                    >
                    <!--1st label-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:layout_marginRight="11dp"
                        android:layout_marginLeft="11dp">
                        <LinearLayout
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center|left"
                            android:background="@drawable/small_card_black">
                        </LinearLayout>
                        <!--1-->
                        <LinearLayout
                            android:layout_width="180dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center|left"
                            android:background="@drawable/small_card_black">
                            <TextView
                                android:id="@+id/textViewProductNameTitle"
                                android:layout_width="180dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textSize="@dimen/textSize12sp"
                                android:paddingLeft="5dp"
                                android:textStyle="bold"
                                android:text="@string/productName"
                                android:textColor="@color/white"/>
                        </LinearLayout>
                        <!--2-->
                        <LinearLayout
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center|left"
                            android:background="@drawable/small_card_black"
                            android:layout_marginLeft=".5dp">
                            <TextView
                                android:id="@+id/textViewQuantityTitle"
                                android:layout_width="100dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textSize="@dimen/textSize12sp"
                                android:paddingLeft="5dp"
                                android:textStyle="bold"
                                android:text="@string/quantity"
                                android:textColor="@color/white"/>
                        </LinearLayout>
                        <!--3-->
                        <LinearLayout
                            android:layout_width="70dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center|left"
                            android:background="@drawable/small_card_black"
                            android:layout_marginLeft=".5dp">
                            <TextView
                                android:id="@+id/textViewReceivedQuantity"
                                android:layout_width="70dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:inputType="phone"
                                android:gravity="center"
                                android:textSize="@dimen/textSize12sp"
                                android:paddingLeft="2dp"
                                android:textStyle="bold"
                                android:text="Received"
                                android:textColor="@color/white"/>
                        </LinearLayout>
                    </LinearLayout>


                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recylcerViewRequisitionList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:layout_editor_absoluteX="0dp"
                        tools:layout_editor_absoluteY="-51dp"
                        android:layout_marginRight="0dp"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginBottom="10dp"
                        />


                </LinearLayout>
            </HorizontalScrollView>
            <!--Button Action-->
            <RelativeLayout
                android:id="@+id/relativeAction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="23dp"
                android:layout_marginRight="23dp">
                <Button
                    android:id="@+id/buttonUpdateRequisition"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Accept"
                    android:shadowColor="@android:color/transparent"
                    android:padding="15dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="0dp"
                    android:textColor="@color/white"
                    android:background="@color/colorPrimary"/>
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
