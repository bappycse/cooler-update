<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffffff"
    >
    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/colorPrimaryDark">
    <ImageView
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:id="@+id/a"
        android:gravity="center"
        android:src="@android:drawable/stat_sys_warning"
        android:scaleType="fitCenter"
        android:layout_centerInParent="true"
        android:tint="@color/white"
        android:backgroundTint="@color/white"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/textViewOrderQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:textSize="@dimen/textSize12sp"
        android:layout_below="@+id/relative"
        android:layout_centerInParent="true"
        android:layout_marginTop="5dp"
        android:textColor="@color/colorPrimary"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="40dp"
        android:hint="Enter Received Quantity"
        android:id="@+id/editTextReceivedQuantity"
        android:layout_below="@+id/textViewOrderQuantity"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="20dp"
        android:textSize="@dimen/textSize14sp"
        android:padding="10dp"
        android:inputType="numberDecimal"
        android:textColor="@color/textColorTitleSmall"
        android:layout_centerHorizontal="true"
        android:background="@drawable/small_card_style3"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextReceivedQuantity"
        android:layout_marginTop="5dp">
        <Button
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:text="Cancel"
            android:id="@+id/buttonCancel"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:layout_marginBottom="20dp"
            android:background="@drawable/button_shape"
            android:layout_centerHorizontal="true"
            android:textColor="@color/textColorTitleSmall"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="15dp"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:text="Submit"
            android:layout_weight="1"
            android:id="@+id/buttonSubmit"
            android:gravity="center_vertical|center_horizontal"
            android:layout_marginBottom="20dp"
            android:background="@drawable/button_shape"
            android:layout_centerHorizontal="true"
            android:textColor="@color/textColorTitleSmall"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"/>
    </LinearLayout>

</RelativeLayout>