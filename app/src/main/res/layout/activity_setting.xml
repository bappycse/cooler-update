<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:segmentedgroup="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_loan_submit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:background="@drawable/backcooler"
    tools:context="com.csi.meghnacooler.Activity.ActivitySetting">
    <include layout="@layout/toolbar"/>
    <!--segment group-->
    <info.hoang8f.android.segmented.SegmentedGroup
        android:id="@+id/segmentedGroupSwitcher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:background="@drawable/capsul_box_style"
        android:layout_marginRight="8dp"
        android:orientation="horizontal"
        android:paddingTop="0dp"
        android:layout_marginLeft="8dp"
        android:layout_centerHorizontal="true"
        segmentedgroup:sc_border_width="0dp"
        segmentedgroup:sc_checked_text_color="#fff"
        segmentedgroup:sc_corner_radius="5dp"
        segmentedgroup:sc_tint_color="@color/colorPrimary"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/toolbar">

        <RadioButton
            android:id="@+id/radioButtonPersonalInfo"
            style="@style/RadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/personalInfo"
            android:checked="true"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            />

        <RadioButton
            android:id="@+id/radioButtonPassword"
            style="@style/RadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/password"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"/>
    </info.hoang8f.android.segmented.SegmentedGroup>
    <!--account info-->
    <LinearLayout
        android:id="@+id/layoutViewProfileInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="23dp"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="23dp"
        android:layout_marginBottom="23dp"
        android:elevation="15dp"
        android:layout_centerInParent="true"
        android:layout_below="@+id/segmentedGroupSwitcher"
        android:gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_style"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="0dp"
            android:elevation="0dp"

            android:visibility="visible">
            <!-- Title -->
            <TextView
                android:id="@+id/textViewLoginTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:textColor="@color/textColorTitleLarge"
                android:gravity="left"
                android:textStyle="bold"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="0dp"
                />
            <!-- Login Title Description-->
            <TextView
                android:id="@+id/textViewLoginTitleDes"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textSize="11sp"
                android:textColor="@color/textColorTitleLarge"
                android:gravity="center"
                android:layout_marginTop="11dp"
                android:visibility="gone"/>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="11dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <!--1st label-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="0dp"
                        android:orientation="horizontal"
                        android:layout_marginRight="11dp"
                        android:layout_marginLeft="11dp">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".5"
                            android:layout_gravity="center|left"
                            android:background="@drawable/small_card_black">
                            <TextView
                                android:id="@+id/textView1"
                                android:layout_width="match_parent"
                                android:layout_height="18dp"
                                android:layout_gravity="center|left"
                                android:textSize="@dimen/textSize12sp"
                                android:text="Name"
                                android:gravity="center"
                                android:textColor="@color/white"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_gravity="center|left"
                            android:background="@drawable/small_card_style3">
                            <TextView
                                android:id="@+id/textViewName"
                                android:layout_width="0dp"
                                android:layout_height="18dp"
                                android:layout_weight="1"
                                android:layout_gravity="center|left"
                                android:gravity="center"
                                android:textSize="@dimen/textSize12sp"
                                android:text=""
                                android:paddingLeft="0dp"/>
                        </LinearLayout>
                    </LinearLayout>
                    <!--2nd label-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="3dp"
                        android:orientation="horizontal"
                        android:layout_marginRight="11dp"
                        android:layout_marginLeft="11dp">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".5"
                            android:layout_gravity="center|left"
                            android:background="@drawable/small_card_black">
                            <TextView
                                android:id="@+id/textView3"
                                android:layout_width="match_parent"
                                android:layout_height="18dp"
                                android:layout_gravity="center|left"
                                android:textSize="@dimen/textSize12sp"
                                android:gravity="center"
                                android:text="User ID"
                                android:textColor="@color/white"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_gravity="center|left"
                            android:background="@drawable/small_card_style3">
                            <TextView
                                android:id="@+id/textViewUserId"
                                android:layout_width="0dp"
                                android:layout_height="18dp"
                                android:layout_weight="1"
                                android:layout_gravity="center|left"
                                android:textSize="@dimen/textSize12sp"
                                android:text=""
                                android:gravity="center"
                                android:paddingLeft="0dp"/>
                        </LinearLayout>
                    </LinearLayout>
                    <!--3rd label-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="3dp"
                        android:orientation="horizontal"
                        android:layout_marginRight="11dp"
                        android:layout_marginLeft="11dp">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".5"
                            android:layout_gravity="center|left"
                            android:background="@drawable/small_card_black">
                            <TextView
                                android:id="@+id/textView5"
                                android:layout_width="match_parent"
                                android:layout_height="18dp"
                                android:layout_gravity="center|left"
                                android:textSize="@dimen/textSize12sp"
                                android:gravity="center"
                                android:textColor="@color/white"
                                android:text="Designation" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_gravity="center|left"
                            android:background="@drawable/small_card_style3">
                            <TextView
                                android:id="@+id/textViewDesignation"
                                android:layout_width="0dp"
                                android:layout_height="18dp"
                                android:layout_weight="1"
                                android:layout_gravity="center|left"
                                android:textSize="@dimen/textSize12sp"
                                android:text=""
                                android:gravity="center"
                                android:paddingLeft="0dp"/>
                        </LinearLayout>
                    </LinearLayout>
                    <!--4th label-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="3dp"
                        android:orientation="horizontal"
                        android:layout_marginRight="11dp"
                        android:layout_marginLeft="11dp">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".5"
                            android:layout_gravity="center|left"
                            android:background="@drawable/small_card_black">
                            <TextView
                                android:id="@+id/textView7"
                                android:layout_width="match_parent"
                                android:layout_height="18dp"
                                android:layout_gravity="center|left"
                                android:textSize="@dimen/textSize12sp"
                                android:gravity="center"
                                android:textColor="@color/white"
                                android:text="User Group" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_gravity="center|left"
                            android:background="@drawable/small_card_style3">
                            <TextView
                                android:id="@+id/textViewUserGroup"
                                android:layout_width="0dp"
                                android:layout_height="18dp"
                                android:layout_weight="1"
                                android:layout_gravity="center|left"
                                android:textSize="@dimen/textSize12sp"
                                android:text=""
                                android:gravity="center"
                                android:paddingLeft="0dp"/>
                        </LinearLayout>
                    </LinearLayout>
                    <!--5th label-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="40dp"
                        android:layout_marginTop="3dp"
                        android:orientation="horizontal"
                        android:layout_marginRight="11dp"
                        android:layout_marginLeft="11dp"
                        android:layout_marginBottom="0dp">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".5"
                            android:layout_gravity="center|left"
                            android:background="@drawable/small_card_black">
                            <TextView
                                android:id="@+id/textView9"
                                android:layout_width="match_parent"
                                android:layout_height="18dp"
                                android:layout_gravity="center|left"
                                android:textSize="@dimen/textSize12sp"
                                android:gravity="center"
                                android:textColor="@color/white"
                                android:text="Email" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_gravity="center|left"
                            android:background="@drawable/small_card_style3">
                            <TextView
                                android:id="@+id/textViewEmail"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_gravity="center|left"
                                android:textSize="@dimen/textSize12sp"
                                android:text=""
                                android:gravity="center"
                                android:paddingLeft="0dp"/>
                        </LinearLayout>
                    </LinearLayout>
                    <!--6th label-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="3dp"
                        android:orientation="horizontal"
                        android:layout_marginRight="11dp"
                        android:layout_marginLeft="11dp"
                        android:layout_marginBottom="0dp">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".5"
                            android:layout_gravity="center|left"
                            android:background="@drawable/small_card_black">
                            <TextView
                                android:id="@+id/textView11"
                                android:layout_width="match_parent"
                                android:layout_height="18dp"
                                android:layout_gravity="center|left"
                                android:textSize="@dimen/textSize12sp"
                                android:gravity="center"
                                android:textColor="@color/white"
                                android:text="Phone" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_gravity="center|left"
                            android:background="@drawable/small_card_style3">
                            <TextView
                                android:id="@+id/textViewPhone"
                                android:layout_width="0dp"
                                android:layout_height="18dp"
                                android:layout_weight="1"
                                android:layout_gravity="center|left"
                                android:textSize="@dimen/textSize12sp"
                                android:text=""
                                android:gravity="center"
                                android:paddingLeft="0dp"/>
                        </LinearLayout>
                    </LinearLayout>
                    <!--7th label-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="40dp"
                        android:layout_marginTop="3dp"
                        android:orientation="horizontal"
                        android:layout_marginRight="11dp"
                        android:layout_marginLeft="11dp"
                        android:layout_marginBottom="0dp">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".5"
                            android:layout_gravity="center|left"
                            android:background="@drawable/small_card_black">
                            <TextView
                                android:id="@+id/textView112"
                                android:layout_width="match_parent"
                                android:layout_height="18dp"
                                android:layout_gravity="center|left"
                                android:textSize="@dimen/textSize12sp"
                                android:gravity="center"
                                android:textColor="@color/white"
                                android:text="Note" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_gravity="center|left"
                            android:background="@drawable/small_card_style3">
                            <TextView
                                android:id="@+id/textViewNote"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_gravity="center|left"
                                android:textSize="@dimen/textSize12sp"
                                android:text=""
                                android:gravity="center"
                                android:paddingLeft="0dp"
                                />
                        </LinearLayout>
                    </LinearLayout>
                    <!--Submit Button-->
                    <Button
                        android:id="@+id/buttonUpdateProfile"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="23dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/button_style"
                        android:textSize="@dimen/textSize14sp"
                        android:text="Update"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:layout_marginRight="50dp"
                        android:layout_marginLeft="50dp"/>

                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </LinearLayout>
    <!--password label-->
    <LinearLayout
        android:id="@+id/layoutEditPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_below="@+id/segmentedGroupSwitcher"
        android:layout_marginTop="23dp"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="23dp"
        android:layout_marginBottom="40dp"
        android:elevation="15dp"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="0dp"
            android:elevation="0dp"
            android:layout_centerInParent="true">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/textView31"
                        android:layout_width="wrap_content"
                        android:layout_height="18dp"
                        android:layout_gravity="center|left"
                        android:textSize="@dimen/textSize14sp"
                        android:textStyle="bold"
                        android:textColor="@color/textColorTitleLarge"
                        android:paddingLeft="15dp"
                        android:text="@string/change_password"
                        android:layout_marginTop="11dp"
                        />
                    <!--2nd label-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="23dp"
                        android:orientation="horizontal"
                        android:layout_marginRight="11dp"
                        android:layout_marginLeft="11dp">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".7"
                            android:layout_gravity="center|left"
                            android:background="@drawable/small_card_black">
                            <TextView
                                android:id="@+id/textView23"
                                android:layout_width="wrap_content"
                                android:layout_height="18dp"
                                android:layout_gravity="center|left"
                                android:textSize="@dimen/textSize12sp"
                                android:paddingLeft="15dp"
                                android:text="@string/old_pass"
                                android:textColor="@color/white"
                                android:gravity="center"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_gravity="center|left"
                            android:background="@drawable/small_card_style3">
                            <EditText
                                android:id="@+id/editTextOldPassword"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:layout_gravity="center|left"
                                android:textSize="@dimen/textSize12sp"
                                android:gravity="center"
                                android:inputType="textPassword"
                                android:paddingLeft="0dp"
                                android:paddingRight="5dp"
                                android:hint="****"
                                android:background="@android:color/transparent"/>
                        </LinearLayout>
                    </LinearLayout>
                    <!--3rd label-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:layout_marginRight="11dp"
                        android:layout_marginLeft="11dp">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".7"
                            android:layout_gravity="center|left"
                            android:background="@drawable/small_card_black">
                            <TextView
                                android:id="@+id/textView25"
                                android:layout_width="wrap_content"
                                android:layout_height="18dp"
                                android:layout_gravity="center|left"
                                android:textSize="@dimen/textSize12sp"
                                android:paddingLeft="15dp"
                                android:text="@string/new_password"
                                android:textColor="@color/white"
                                android:gravity="center"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_gravity="center|left"
                            android:background="@drawable/small_card_style3">
                            <EditText
                                android:id="@+id/editTextNewPassword"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:layout_gravity="center|left"
                                android:textSize="@dimen/textSize12sp"
                                android:gravity="center"
                                android:inputType="textPassword"
                                android:paddingLeft="0dp"
                                android:paddingRight="5dp"
                                android:hint="****"
                                android:background="@android:color/transparent"/>
                        </LinearLayout>
                    </LinearLayout>
                    <!--4th label-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:layout_marginRight="11dp"
                        android:layout_marginLeft="11dp">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".7"
                            android:layout_gravity="center|left"
                            android:background="@drawable/small_card_black">
                            <TextView
                                android:id="@+id/textView27"
                                android:layout_width="wrap_content"
                                android:layout_height="18dp"
                                android:layout_gravity="center|left"
                                android:textSize="@dimen/textSize12sp"
                                android:paddingLeft="15dp"
                                android:text="@string/confirm_pass"
                                android:textColor="@color/white"
                                android:gravity="center"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_gravity="center|left"
                            android:background="@drawable/small_card_style3">
                            <EditText
                                android:id="@+id/editTextConfirmPassword"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:layout_gravity="center|left"
                                android:textSize="@dimen/textSize12sp"
                                android:gravity="center"
                                android:paddingLeft="0dp"
                                android:paddingRight="5dp"
                                android:hint="****"
                                android:inputType="textPassword"
                                android:background="@android:color/transparent"/>
                        </LinearLayout>
                    </LinearLayout>
                    <!--Submit Button-->
                    <Button
                        android:id="@+id/buttonChangePassword"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="23dp"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/button_style"
                        android:textSize="@dimen/textSize14sp"
                        android:text="Submit"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:layout_marginRight="50dp"
                        android:layout_marginLeft="50dp"/>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>