<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <!--Order List-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:scrollbarSize="1.5dp"
        android:layout_marginTop="5dp"
        android:scrollbars="horizontal"
        android:layout_centerInParent="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center">
            <!--Account Info-->
            <LinearLayout
                android:id="@+id/layoutView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:layout_marginTop="23dp"
                android:layout_marginLeft="23dp"
                android:layout_marginRight="23dp"
                android:layout_marginBottom="23dp"
                android:elevation="15dp"
                android:layout_centerInParent="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/card_style"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginBottom="20dp"
                    android:elevation="0dp"

                    android:visibility="visible">
                    <!-- Title -->
                    <TextView
                        android:id="@+id/textViewLoginTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="17sp"
                        android:textColor="@color/textColorTitleLarge"
                        android:gravity="left"
                        android:textStyle="bold"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="0dp"
                        />
                    <!-- Login Title Description-->
                    <TextView
                        android:id="@+id/textViewLoginTitleDes"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:textSize="11sp"
                        android:textColor="@color/textColorTitleLarge"
                        android:gravity="center"
                        android:layout_marginTop="11dp"
                        android:visibility="gone"/>
                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="11dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <!--1st label-->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginTop="0dp"
                                android:orientation="horizontal"
                                android:layout_marginRight="11dp"
                                android:layout_marginLeft="11dp">
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight=".5"
                                    android:layout_gravity="center|left"
                                    android:background="@drawable/small_card_black">
                                    <TextView
                                        android:id="@+id/textView1"
                                        android:layout_width="match_parent"
                                        android:layout_height="18dp"
                                        android:layout_gravity="center|left"
                                        android:textSize="@dimen/textSize12sp"
                                        android:text="Name"
                                        android:gravity="center"
                                        android:textColor="@color/white"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:layout_gravity="center|left"
                                    android:background="@drawable/small_card_style3">
                                    <TextView
                                        android:id="@+id/textViewName"
                                        android:layout_width="0dp"
                                        android:layout_height="18dp"
                                        android:layout_weight="1"
                                        android:layout_gravity="center|left"
                                        android:gravity="center"
                                        android:textSize="@dimen/textSize12sp"
                                        android:text=""
                                        android:paddingLeft="0dp"/>
                                </LinearLayout>
                            </LinearLayout>
                            <!--2nd label-->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginTop="3dp"
                                android:orientation="horizontal"
                                android:layout_marginRight="11dp"
                                android:layout_marginLeft="11dp">
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight=".5"
                                    android:layout_gravity="center|left"
                                    android:background="@drawable/small_card_black">
                                    <TextView
                                        android:id="@+id/textView3"
                                        android:layout_width="match_parent"
                                        android:layout_height="18dp"
                                        android:layout_gravity="center|left"
                                        android:textSize="@dimen/textSize12sp"
                                        android:gravity="center"
                                        android:text="User ID"
                                        android:textColor="@color/white"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:layout_gravity="center|left"
                                    android:background="@drawable/small_card_style3">
                                    <TextView
                                        android:id="@+id/textViewUserId"
                                        android:layout_width="0dp"
                                        android:layout_height="18dp"
                                        android:layout_weight="1"
                                        android:layout_gravity="center|left"
                                        android:textSize="@dimen/textSize12sp"
                                        android:text=""
                                        android:gravity="center"
                                        android:paddingLeft="0dp"/>
                                </LinearLayout>
                            </LinearLayout>
                            <!--3rd label-->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginTop="3dp"
                                android:orientation="horizontal"
                                android:layout_marginRight="11dp"
                                android:layout_marginLeft="11dp">
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight=".5"
                                    android:layout_gravity="center|left"
                                    android:background="@drawable/small_card_black">
                                    <TextView
                                        android:id="@+id/textView5"
                                        android:layout_width="match_parent"
                                        android:layout_height="18dp"
                                        android:layout_gravity="center|left"
                                        android:textSize="@dimen/textSize12sp"
                                        android:gravity="center"
                                        android:textColor="@color/white"
                                        android:text="Designation" />
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:layout_gravity="center|left"
                                    android:background="@drawable/small_card_style3">
                                    <TextView
                                        android:id="@+id/textViewDesignation"
                                        android:layout_width="0dp"
                                        android:layout_height="18dp"
                                        android:layout_weight="1"
                                        android:layout_gravity="center|left"
                                        android:textSize="@dimen/textSize12sp"
                                        android:text=""
                                        android:gravity="center"
                                        android:paddingLeft="0dp"/>
                                </LinearLayout>
                            </LinearLayout>
                            <!--4th label-->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginTop="3dp"
                                android:orientation="horizontal"
                                android:layout_marginRight="11dp"
                                android:layout_marginLeft="11dp">
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight=".5"
                                    android:layout_gravity="center|left"
                                    android:background="@drawable/small_card_black">
                                    <TextView
                                        android:id="@+id/textView7"
                                        android:layout_width="match_parent"
                                        android:layout_height="18dp"
                                        android:layout_gravity="center|left"
                                        android:textSize="@dimen/textSize12sp"
                                        android:gravity="center"
                                        android:textColor="@color/white"
                                        android:text="User Group" />
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:layout_gravity="center|left"
                                    android:background="@drawable/small_card_style3">
                                    <TextView
                                        android:id="@+id/textViewUserGroup"
                                        android:layout_width="0dp"
                                        android:layout_height="18dp"
                                        android:layout_weight="1"
                                        android:layout_gravity="center|left"
                                        android:textSize="@dimen/textSize12sp"
                                        android:text=""
                                        android:gravity="center"
                                        android:paddingLeft="0dp"/>
                                </LinearLayout>
                            </LinearLayout>
                            <!--5th label-->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:minHeight="40dp"
                                android:layout_marginTop="3dp"
                                android:orientation="horizontal"
                                android:layout_marginRight="11dp"
                                android:layout_marginLeft="11dp"
                                android:layout_marginBottom="0dp">
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight=".5"
                                    android:layout_gravity="center|left"
                                    android:background="@drawable/small_card_black">
                                    <TextView
                                        android:id="@+id/textView9"
                                        android:layout_width="match_parent"
                                        android:layout_height="18dp"
                                        android:layout_gravity="center|left"
                                        android:textSize="@dimen/textSize12sp"
                                        android:gravity="center"
                                        android:textColor="@color/white"
                                        android:text="Email" />
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:layout_gravity="center|left"
                                    android:background="@drawable/small_card_style3">
                                    <TextView
                                        android:id="@+id/textViewEmail"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:layout_gravity="center|left"
                                        android:textSize="@dimen/textSize12sp"
                                        android:text=""
                                        android:gravity="center"
                                        android:paddingLeft="0dp"/>
                                </LinearLayout>
                            </LinearLayout>
                            <!--6th label-->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginTop="3dp"
                                android:orientation="horizontal"
                                android:layout_marginRight="11dp"
                                android:layout_marginLeft="11dp"
                                android:layout_marginBottom="0dp">
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight=".5"
                                    android:layout_gravity="center|left"
                                    android:background="@drawable/small_card_black">
                                    <TextView
                                        android:id="@+id/textView11"
                                        android:layout_width="match_parent"
                                        android:layout_height="18dp"
                                        android:layout_gravity="center|left"
                                        android:textSize="@dimen/textSize12sp"
                                        android:gravity="center"
                                        android:textColor="@color/white"
                                        android:text="Phone" />
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:layout_gravity="center|left"
                                    android:background="@drawable/small_card_style3">
                                    <TextView
                                        android:id="@+id/textViewPhone"
                                        android:layout_width="0dp"
                                        android:layout_height="18dp"
                                        android:layout_weight="1"
                                        android:layout_gravity="center|left"
                                        android:textSize="@dimen/textSize12sp"
                                        android:text=""
                                        android:gravity="center"
                                        android:paddingLeft="0dp"/>
                                </LinearLayout>
                            </LinearLayout>
                            <!--7th label-->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:minHeight="40dp"
                                android:layout_marginTop="3dp"
                                android:orientation="horizontal"
                                android:layout_marginRight="11dp"
                                android:layout_marginLeft="11dp"
                                android:layout_marginBottom="0dp">
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight=".5"
                                    android:layout_gravity="center|left"
                                    android:background="@drawable/small_card_black">
                                    <TextView
                                        android:id="@+id/textView112"
                                        android:layout_width="match_parent"
                                        android:layout_height="18dp"
                                        android:layout_gravity="center|left"
                                        android:textSize="@dimen/textSize12sp"
                                        android:gravity="center"
                                        android:textColor="@color/white"
                                        android:text="Bio" />
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:layout_gravity="center|left"
                                    android:background="@drawable/small_card_style3">
                                    <TextView
                                        android:id="@+id/textViewNote"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:layout_gravity="center|left"
                                        android:textSize="@dimen/textSize12sp"
                                        android:text=""
                                        android:gravity="center"
                                        android:paddingLeft="0dp"
                                        />
                                </LinearLayout>
                            </LinearLayout>

                        </LinearLayout>
                    </ScrollView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>